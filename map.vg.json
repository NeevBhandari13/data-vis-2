{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "2023 F1 Circuits and Winning Constructors",
  "description": "A map showing 2023 F1 circuits with dots representing the winning constructor and driver at each race",
  "width": 800,
  "height": 500,
  "layer": [
    {
      "data": {
        "values": [{}]
      },
      "mark": {
        "type": "rect",
        "fill": "#a6cee3"
      },
      "encoding": {
        "x": {"value": 0},
        "x2": {"value": 800},
        "y": {"value": 0},
        "y2": {"value": 500}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/NeevBhandari13/data-vis-2/main/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "projection": {
        "type": "equalEarth"
      },
      "mark": {
        "type": "geoshape",
        "fill": "#c2b280",
        "stroke": "#a6cee3"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/NeevBhandari13/data-vis-2/main/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "projection": {
        "type": "equalEarth"
      },
      "mark": {
        "type": "geoshape",
        "stroke": "lightgrey",
        "fill": null
      }
    },
    {
      "data": {
        "url": "data/circuits.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "lookup": "circuitId",
          "from": {
            "data": {
              "url": "data/races.csv",
              "format": {"type": "csv"}
            },
            "key": "circuitId",
            "fields": ["year", "raceId"]
          }
        },
        {
          "lookup": "raceId",
          "from": {
            "data": {
              "url": "data/results.csv",
              "format": {"type": "csv"}
            },
            "key": "raceId",
            "fields": ["positionOrder", "driverId", "constructorId"]
          },
          "as": "race_results"
        },
        {
          "lookup": "driverId",
          "from": {
            "data": {
              "url": "data/drivers.csv",
              "format": {"type": "csv"}
            },
            "key": "driverId",
            "fields": ["surname"]
          },
          "as": "winner_driver"
        },
        {
          "lookup": "constructorId",
          "from": {
            "data": {
              "url": "data/constructors.csv",
              "format": {"type": "csv"}
            },
            "key": "constructorId",
            "fields": ["name"]
          },
          "as": "winner_constructor"
        },
        {
          "filter": "datum.race_results.positionOrder == 1 && datum.year == 2023"
        }
      ],
      "mark": "circle",
      "encoding": {
        "longitude": {"field": "lng", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "color": {
          "field": "winner_constructor",
          "type": "nominal",
          "title": "Winning Constructor"
        },
        "size": {"value": 100},
        "tooltip": [
          {"field": "name", "type": "nominal", "title": "Circuit"},
          {"field": "country", "type": "nominal", "title": "Country"},
          {"field": "winner_driver", "type": "nominal", "title": "Winning Driver"},
          {"field": "winner_constructor", "type": "nominal", "title": "Winning Constructor"}
        ]
      }
    }
  ]
}