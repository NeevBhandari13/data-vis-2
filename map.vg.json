{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A map with F1 circuits plotted on top of it",
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/deldersveld/topojson/master/world-countries.json",
          "format": {
            "type": "topojson",
            "feature": "countries1"
          }
        },
        "projection": {
          "type": "mercator"
        },
        "mark": {
          "type": "geoshape",
          "fill": "#dddddd",
          "stroke": "white"
        }
      },
      {
        "data": {
          "values": [
            {"name": "Albert Park Grand Prix Circuit", "lat": -37.8497, "lng": 144.968, "country": "Australia"},
            {"name": "Sepang International Circuit", "lat": 2.76083, "lng": 101.738, "country": "Malaysia"},
            {"name": "Bahrain International Circuit", "lat": 26.0325, "lng": 50.5106, "country": "Bahrain"},
            {"name": "Circuit de Barcelona-Catalunya", "lat": 41.57, "lng": 2.26111, "country": "Spain"},
            {"name": "Istanbul Park", "lat": 40.9517, "lng": 29.405, "country": "Turkey"}
          ]
        },
        "mark": "circle",
        "encoding": {
          "longitude": {"field": "lng", "type": "quantitative"},
          "latitude": {"field": "lat", "type": "quantitative"},
          "color": {"field": "country", "type": "nominal"},
          "size": {"value": 100},
          "tooltip": [{"field": "name", "type": "nominal"}, {"field": "country", "type": "nominal"}]
        }
      }
    ]
  }
  