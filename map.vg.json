{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A map showing 2023 F1 circuits with dots representing the winning constructor and driver at each race, with an annotation for Singapore and an interactive legend.",
  "width": 800,
  "height": 500,
  "layer": [
    {
      "data": {
        "values": [{}]
      },
      "mark": {
        "type": "rect",
        "fill": "#a6cee3"
      },
      "encoding": {
        "x": {"value": 0},
        "x2": {"value": 800},
        "y": {"value": 0},
        "y2": {"value": 500}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/NeevBhandari13/data-vis-2/main/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "projection": {
        "type": "equalEarth"
      },
      "mark": {
        "type": "geoshape",
        "fill": "#c2b280",
        "stroke": "#a6cee3"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/NeevBhandari13/data-vis-2/main/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "projection": {
        "type": "equalEarth"
      },
      "mark": {
        "type": "geoshape",
        "stroke": "lightgrey",
        "fill": null
      }
    },
    {
      "data": {
        "url": "data/results.csv",
        "format": {
          "type": "csv",
          "parse": {"positionOrder": "number"}
        }
      },
      "transform": [
        {
          "filter": "datum.positionOrder == 1"
        },
        {
          "lookup": "raceId",
          "from": {
            "data": {
              "url": "data/races.csv"
            },
            "key": "raceId",
            "fields": ["circuitId", "year"]
          }
        },
        {
          "lookup": "circuitId",
          "from": {
            "data": {
              "url": "data/circuits.csv"
            },
            "key": "circuitId",
            "fields": ["name", "country", "lat", "lng"]
          }
        },
        {
          "lookup": "driverId",
          "from": {
            "data": {
              "url": "data/drivers.csv"
            },
            "key": "driverId",
            "fields": ["surname"]
          },
          "as": ["winner_driver"]
        },
        {
          "lookup": "constructorId",
          "from": {
            "data": {
              "url": "data/constructors.csv"
            },
            "key": "constructorId",
            "fields": ["name"]
          },
          "as": ["winner_constructor"]
        },
        {
          "filter": "datum.year == 2023"
        }
      ],
      "selection": {
        "constructor_highlight": {
          "type": "multi",
          "fields": ["winner_constructor"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "longitude": {"field": "lng", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "color": {
          "field": "winner_constructor",
          "type": "nominal",
          "scale": {
            "domain": ["Ferrari", "Red Bull"],
            "range": ["red", "blue"]
          },
          "title": "Winning Constructor"
        },
        "size": {"value": 100},
        "opacity": {
          "condition": {"selection": "constructor_highlight", "value": 1},
          "value": 0.2
        },
        "tooltip": [
          {"field": "name", "type": "nominal", "title": "Circuit"},
          {"field": "country", "type": "nominal", "title": "Country"},
          {"field": "winner_driver", "type": "nominal", "title": "Winning Driver"},
          {"field": "winner_constructor", "type": "nominal", "title": "Winning Constructor"}
        ]
      }
    },
    {
      "data": {
        "values": [
          {
            "longitude": 103.851959,
            "latitude": 1.290270,
            "text": "Only race Red Bull did not win"
          }
        ]
      },
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5,
        "dy": -10,
        "fontSize": 12
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "text": {"field": "text"},
        "color": {"value": "black"}
      }
    }
  ],
  "projection": {
    "type": "equalEarth"
  }
}