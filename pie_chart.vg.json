{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "data/results.csv",
      "format": {
        "type": "csv"
      }
    },
    "transform": [
      {
        "lookup": "raceId",
        "from": {
          "data": {
            "url": "data/races.csv",
            "format": {"type": "csv"}
          },
          "key": "raceId",
          "fields": ["year"]
        }
      },
      {
        "filter": "datum.year == 2023"
      },
      {
        "lookup": "driverId",
        "from": {
          "data": {
            "url": "data/drivers.csv",
            "format": {"type": "csv"}
          },
          "key": "driverId",
          "fields": ["surname"]
        }
      },
      {
        "calculate": "datum.positionOrder <= 3 ? datum.positionOrder : 'Other'",
        "as": "finishPosition"
      },
      {
        "filter": "datum.surname == driver_selection"
      },
      {
        "aggregate": [{
          "op": "count",
          "as": "count"
        }],
        "groupby": ["finishPosition"]
      }
    ],
    "params": [
      {
        "name": "driver_selection",
        "value": "Hamilton", 
        "bind": {
          "input": "select",
          "options": ["Hamilton", "Verstappen", "Leclerc", "Russell", "Sainz"],
          "labels": ["Hamilton", "Verstappen", "Leclerc", "Russell", "Sainz"],
          "name": "Select Driver: "
        }
      }
    ],
    "mark": "arc",
    "encoding": {
      "theta": {
        "field": "count",
        "type": "quantitative"
      },
      "color": {
        "field": "finishPosition",
        "type": "nominal",
        "scale": {
          "domain": ["1", "2", "3", "Other"],
          "range": ["#d4af37", "#C0C0C0", "#CD7F32", "#000000"]
        },
        "title": "Finish Position"
      },
      "tooltip": [
        {"field": "finishPosition", "type": "nominal", "title": "Position"},
        {"field": "count", "type": "quantitative", "title": "Number of Finishes"}
      ]
    }
  }
  